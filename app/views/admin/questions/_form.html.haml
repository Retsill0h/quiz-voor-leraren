.col-md-8
	.panel.panel-primary
		.panel-heading Nieuwe vraag toevoegen
		.panel-body
			= form_for [:admin, question]do |f|
				.form-group
					= f.collection_select(:chapter_id, Chapter.all, :id, :name, include_blank: "Kies een hoofdstuk", class: "form-control")
				.form-group
					= f.text_area :body, rows: "5" , class: "form-control", placeholder: "Vraag"
				= f.fields_for :answer do |a|
					= render "admin/answers/answer_fields", :f => a
				= f.submit 'Opslaan', class: "btn btn-primary"
